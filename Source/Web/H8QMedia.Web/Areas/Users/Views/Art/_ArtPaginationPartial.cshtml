@model H8QMedia.Web.ViewModels.Art.ArtIndexViewModel

<div class="row text-center">
    <div class="col-md-12">
        <ul class="pagination">

            @if (Model.CurrentPage > 1)
            {
                <li><a href="/Users/Art/Index/@(Model.CurrentPage - 1)">&laquo;</a></li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                var className = Model.CurrentPage == i ? "active" : string.Empty;

                <li class="@className"><a href="/Users/Art/Index/@i">@i</a></li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li><a href="/Users/Art/Index/@(Model.CurrentPage + 1)">&raquo;</a></li>
            }
        </ul>
    </div>
</div>

