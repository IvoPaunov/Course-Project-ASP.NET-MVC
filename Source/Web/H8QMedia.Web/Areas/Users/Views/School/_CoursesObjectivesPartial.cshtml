@model IEnumerable<H8QMedia.Web.ViewModels.Course.CourseObjectiveViewModel>
@{
    ViewBag.Title = "_CoursesObjectivesPartial";
}
@using H8QMedia.Common
@using Microsoft.AspNet.Identity
@using H8QMedia.Web.Areas.Users.ViewModels.Message

@if (Request.IsAuthenticated && (User.IsInRole(ApplicationRoles.Admin) || User.IsInRole(ApplicationRoles.Trainer)))
{
    <div calss="row text-center">
        <div class="col-md-12">
            <a href="/Users/CourseObjective/Create" class="btn btn-md btn-primary full-width">Add new Course Objective</a>
        </div>
    </div>

    <br />
    <br />
}

<div calss="row text-center">
    <div class="col-md-12">
        @if (Model.Count() > 0)
        {

            <div class="col-md-6">
                @foreach (var course in Model)
                {
                    @Html.DisplayFor(model => course, DisplayTemplatesPaths.CourseObjectiveViewModel)
                }
            </div>

        }
        else
        {
            <div class="list-group-item">
                <h3 class="text-info">No Courses</h3>
            </div>
        }
    </div>
</div>